{
  "name": "@artsy/renovate-config",
  "description": "Arty's Renovate preset configs",
  "author": "zephraph <zephraph@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/artsy/renovate-config",
  "repository": "https://github.com/artsy/renovate-config.git",
  "publishConfig": {
    "allow": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/artsy/renovate-config/issues"
  },
  "version": "1.6.0",
  "scripts": {
    "release": "auto shipit",
    "test": "jest"
  },
  "devDependencies": {
    "@artsy/auto-config": "0.1.0",
    "jest": "24.1.0",
    "renovate": "14.10.5"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "packageRules": [
        {
          "managers": [
            "npm"
          ],
          "depTypeList": [
            "dependencies",
            "devDependencies",
            "peerDependencies"
          ],
          "packagePatterns": [
            "*"
          ],
          "excludePackagePatterns": [
            "^@artsy"
          ],
          "enabled": false
        },
        {
          "managers": [
            "npm"
          ],
          "depTypeList": [
            "engines"
          ],
          "packagePatterns": [
            "*"
          ],
          "enabled": false
        },
        {
          "depTypeList": [
            "devDependencies",
            "orb"
          ],
          "labels": [
            "Version: Trivial"
          ]
        },
        {
          "packageNames": [
            "yarn"
          ],
          "depTypeList": [
            "orb"
          ],
          "automerge": true,
          "major": {
            "automerge": false
          }
        },
        {
          "packageNames": [
            "@artsy/auto-config"
          ],
          "automerge": true,
          "major": {
            "automerge": false
          }
        }
      ],
      "enabledManagers": [
        "npm",
        "circleci"
      ],
      "ignoreDeps": [
        "artsy/hokusai"
      ],
      "vulnerabilityAlerts": {
        "enabled": false
      },
      "prHourlyLimit": 0,
      "prBodyNotes": [
        "See full list of changes [here]({{sourceUrl}}/compare/v{{currentValue}}...v{{newValue}})."
      ],
      "timezone": "America/New_York"
    }
  }
}
